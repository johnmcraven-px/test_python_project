    resolveFeatureAngle 30;

    refinementRegions
    {
        propellerZone
        {
            mode inside;
            levels ((1e15 2));
        }
    }

    locationInMesh (0 0 0);  // Ensure this point is inside your mesh
    allowFreeStandingZoneFaces true;
}

